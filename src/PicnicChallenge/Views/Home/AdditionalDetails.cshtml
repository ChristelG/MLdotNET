@model  CreateIssueForm

    <div class="container">
        <div class="row">
            <div class="col">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">Picnic challenge</li>
                        <li class="breadcrumb-item active">Provide additional data</li>
                    </ol>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1>Provide additional details about your issue</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <form asp-action="SubmitIssue">
                    <div class="form-group">
                        <label asp-for="ItemCategory"></label>
                        <input asp-for="ItemCategory" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comments"></label>
                        <textarea asp-for="Comments" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit issue</button>
                    </div>
                </form>
            </div>
        </div>
    </div>